{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "es2016",
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "~utils/*": ["utils/*"],
            "~components/*": ["components/*"],
            "~scss/*": ["scss/*"]
        }
    }
}
